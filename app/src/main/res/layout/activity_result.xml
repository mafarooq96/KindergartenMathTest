<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.mafar.kindergartenmathtest.ResultActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Addition Test"
        android:id="@+id/testName"
        android:textSize="35dp"
        android:layout_marginTop="54dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textIsSelectable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Result"
        android:id="@+id/textView4"
        android:textSize="25dp"
        android:layout_below="@+id/testName"
        android:layout_alignLeft="@+id/score"
        android:layout_alignStart="@+id/score" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="57%"
        android:id="@+id/score"
        android:textSize="75dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Correct Answers: 3"
        android:id="@+id/correctAnswers"
        android:textSize="25dp"
        android:layout_below="@+id/score"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Incorrect Answers: 2"
        android:id="@+id/incorrectAnswers"
        android:textSize="25dp"
        android:layout_below="@+id/correctAnswers"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to Test List"
        android:id="@+id/backToTestList"
        android:background="#2061bd"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:onClick="buttonOnClick"
        android:clickable="false"
        android:capitalize="none"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
